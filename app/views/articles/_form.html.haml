= semantic_form_for(@article, :html => {:class => 'form-horizontal'}) do |f|
  .col-sm-6
    = f.input :section_id, :as => :select, :collection => Section.order(:sequence).all
    = f.input :title, :as => :string
    = f.input :what_we_learn, :as => :string, :placeholder => 'e.g. {"What to do in your first day on Bibliocloud","How to create your first titles","How to start working with your team"}'
  .col-sm-6
    = f.input :body

  .actions
    = f.submit
