= semantic_form_for(@article, :html => {:class => 'form-horizontal'}) do |f|
  = f.input :title, :as => :string
  = f.input :body
  = f.input :what_we_learn, :placeholder => 'e.g. {"What to do in your first day on Bibliocloud","How to create your first titles","How to start working with your team"}'
  .actions
    = f.submit
